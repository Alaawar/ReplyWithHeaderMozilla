<?xml version="1.0"?>
<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">

  <Description about="urn:mozilla:install-manifest">
    <em:id>replywithheader@myjeeva.com</em:id>
    <em:name>ReplyWithHeader</em:name>
    <em:version>1.0</em:version>
    <em:creator>Jeevanandam M.</em:creator>
    <em:description>Quoting headers of email message, few goodies for Thunderbird &amp; Postbox.</em:description>
    <em:homepageURL>http://myjeeva.com/replywithheadermozilla</em:homepageURL>
    <em:optionsURL>chrome://replywithheader/content/rwh-prefs.xul</em:optionsURL>
    <!-- <em:aboutURL>chrome://replywithheader/content/rwh-about.xul</em:aboutURL> -->

    <!-- Thunderbird -->
    <em:targetApplication>
      <Description>
        <em:id>{3550f703-e582-4d05-9a08-453d09bdfdc6}</em:id>
        <em:minVersion>17</em:minVersion>
        <em:maxVersion>40.*</em:maxVersion>
      </Description>
    </em:targetApplication>

    <!-- Postbox -->
    <em:targetApplication>
      <Description>
        <em:id>postbox@postbox-inc.com</em:id>
        <em:minVersion>3.0</em:minVersion>
        <em:maxVersion>4.*</em:maxVersion>
      </Description>
    </em:targetApplication>
  </Description>      
</RDF>